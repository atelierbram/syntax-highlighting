<EditorStyle name="Base16 Atelier Forest Light"
             _description="Color schemes for hackers.">
  <!--
     - https://github.com/chriskempson/base16
     - Scheme: Bram de Haan (http://atelierbram.github.io/syntax-highlighting/atelier-schemes/forest)
     -->
  <Color name="base00" value="#1b1918"/>
  <Color name="base01" value="#2c2421"/>
  <Color name="base02" value="#68615e"/>
  <Color name="base03" value="#766e6b"/>
  <Color name="base04" value="#9c9491"/>
  <Color name="base05" value="#a8a19f"/>
  <Color name="base06" value="#e6e2e0"/>
  <Color name="base07" value="#f1efee"/>
  <Color name="base08" value="#f22c40"/>
  <Color name="base09" value="#df5320"/>
  <Color name="base0A" value="#c38418"/>
  <Color name="base0B" value="#7b9726"/>
  <Color name="base0C" value="#3d97b8"/>
  <Color name="base0D" value="#407ee7"/>
  <Color name="base0E" value="#6666ea"/>
  <Color name="base0F" value="#c33ff3"/>

  <!-- Text -->
  <Style name="text" color="base02" bgColor="base07"/>
  <Style name="text.background.readonly" color="base07"/>
  <Style name="text.background.searchresult" color="base0F"/>
  <Style name="text.background.searchresult-main" color="base09"/>
  <Style name="text.preprocessor" color="base0C"/>
  <Style name="text.selection" bgColor="base05"/>

  <!-- Keywords -->
  <Style name="keyword" color="base0E"/>
  <Style name="keyword.access" color="base08" weight="Bold"/>
  <Style name="keyword.exceptions" color="base08"/>
  <Style name="keyword.jump" color="base08" weight="Bold"/>
  <Style name="keyword.misc" color="base0A"/>
  <Style name="keyword.operator" color="base08" weight="Bold"/>
  <Style name="keyword.semantic.error" color="base07" bgColor="base08"/>
  <Style name="keyword.semantic.field" color="base02"/>
  <Style name="keyword.semantic.method" color="base02"/>
  <Style name="keyword.semantic.property" color="base02"/>
  <Style name="keyword.semantic.type" color="base0A"/>
  <Style name="keyword.type" color="base0A"/>

  <!-- Miscellaneous -->
  <Style name="comment" color="base04"/>
  <Style name="comment.keyword.todo" color="base0A" bgColor="base06"/>
  <Style name="constant" color="base09"/>
  <Style name="constant.language.void" color="base0A"/>
  <Style name="iconbar" color="base06"/>
  <Style name="iconbar.separator" color="base05"/>
  <Style name="linenumber" color="base04" bgColor="base07"/>
  <Style name="marker.bracket" color="base04" bgColor="base05"/>
  <Style name="marker.line" color="base06"/>
  <Style name="marker.ruler" color="base05"/>
  <Style name="string" color="base0B"/>
  <Style name="string.escape" color="base0F"/>
  <Style name="tooltip" color="base04" bgColor="base06"/>
  <Style name="tooltip.pager.text" color="base01"/>
  <Style name="tooltip.pager.triangle" color="base01"/>
  <Style name="xml" color="base02"/>
  <Style name="xml.cdata" color="base0B"/>
  <Style name="xml.name" color="base0D"/>
  <Style name="xml.attribute" color="base0A"/>

  <!-- Diff -->
  <Style name="diff.header" color="base0D" weight="Bold"/>
  <Style name="diff.header-newfile" color="base0B" weight="Bold"/>
  <Style name="diff.header-oldfile" color="base08" weight="Bold"/>
  <Style name="diff.line-added" color="base0B"/>
  <Style name="diff.line-removed" color="base08"/>
  <Style name="diff.location" color="base0A"/>
</EditorStyle>
