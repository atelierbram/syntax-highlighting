$base00 = #24242e;
$base01 = #2f2f3c;
$base02 = #515167;
$base03 = #5b5b76;
$base04 = #646487;
$base05 = #767693;
$base06 = #9d9dc8;
$base07 = #ebebff;
$base08 = #5151e6;
$base09 = #dd672c;
$base0a = #f36e2b;
$base0b = #6a574d;
$base0c = #fe8c52;
$base0d = #f97c3e;
$base0e = #7676f4;
$base0f = #6363ee;

// Duotone-DarkSpace Comment
.hljs-comment {
  color: $base04;
}

// Duotone-DarkSpace Red
.hljs-variable,
.hljs-attribute,
.hljs-tag,
.hljs-regexp,
.ruby .hljs-constant,
.xml .hljs-tag .hljs-title,
.xml .hljs-pi,
.xml .hljs-doctype,
.html .hljs-doctype,
.css .hljs-id,
.css .hljs-class,
.css .hljs-pseudo {
  color: $base08;
}

// Duotone-DarkSpace Orange
.hljs-number,
.hljs-preprocessor,
.hljs-built_in,
.hljs-literal,
.hljs-params,
.hljs-constant {
  color: $base09;
}

// Duotone-DarkSpace Yellow
.ruby .hljs-class .hljs-title,
.css .hljs-rules .hljs-attribute {
  color: $base0a;
}

// Duotone-DarkSpace Green
.hljs-string,
.hljs-value,
.hljs-inheritance,
.hljs-header,
.ruby .hljs-symbol,
.xml .hljs-cdata {
  color: $base0b;
}

// Duotone-DarkSpace Aqua
.hljs-title,
.css .hljs-hexcolor {
  color: $base0c;
}

// Duotone-DarkSpace Blue
.hljs-function,
.python .hljs-decorator,
.python .hljs-title,
.ruby .hljs-function .hljs-title,
.ruby .hljs-title .hljs-keyword,
.perl .hljs-sub,
.javascript .hljs-title,
.coffeescript .hljs-title {
  color: $base0d;
}

// Duotone-DarkSpace Purple
.hljs-keyword,
.javascript .hljs-function {
  color: $base0e;
}

.hljs {
  display: block;
  overflow-x: auto;
  background: $base00;
  color: $base05;
  padding: 0.5em;
  -webkit-text-size-adjust: none;
}

.coffeescript .javascript,
.javascript .xml,
.tex .hljs-formula,
.xml .javascript,
.xml .vbscript,
.xml .css,
.xml .hljs-cdata {
  opacity: 0.5;
}
