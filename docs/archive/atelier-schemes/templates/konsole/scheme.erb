# schema for konsole (KDE3)
# put in ~/.kde/share/apps/konsole/

title = Base16 <%= @scheme %>

<%
@ratio = 50
%>
#   slot    transparent bold
#      | red grn blu  | |
#      V V--color--V  V V
color  0 <%= (@base["05"]["rgb"].map {|x| '%3s' % x} ).join(' ') %>  0 0 # 0 - Foreground Color
color  1 <%= (@base["00"]["rgb"].map {|x| '%3s' % x} ).join(' ') %>  1 0 # 1 - Background Color
color  2 <%= (@base["00"]["rgb"].map {|x| '%3s' % x} ).join(' ') %>  0 0 # 2 - Color 0 (black)
color  3 <%= (@base["08"]["rgb"].map {|x| '%3s' % x} ).join(' ') %>  0 0 # 3 - Color 1 (red)
color  4 <%= (@base["0B"]["rgb"].map {|x| '%3s' % x} ).join(' ') %>  0 0 # 3 - Color 2 (green)
color  5 <%= (@base["0A"]["rgb"].map {|x| '%3s' % x} ).join(' ') %>  0 0 # 3 - Color 3 (yellow)
color  6 <%= (@base["0D"]["rgb"].map {|x| '%3s' % x} ).join(' ') %>  0 0 # 3 - Color 4 (blue)
color  7 <%= (@base["0E"]["rgb"].map {|x| '%3s' % x} ).join(' ') %>  0 0 # 3 - Color 5 (magenta)
color  8 <%= (@base["0C"]["rgb"].map {|x| '%3s' % x} ).join(' ') %>  0 0 # 3 - Color 6 (cyan)
color  9 <%= (@base["05"]["rgb"].map {|x| '%3s' % x} ).join(' ') %>  0 0 # 3 - Color 7 (white)
color 10 <%= (tint(@base["05"]["rgb"], @ratio).map {|x| '%3s' % x} ).join(' ') %>  0 1 # 3 - Foreground Intensive Color
color 11 <%= (tint(@base["00"]["rgb"], @ratio).map {|x| '%3s' % x} ).join(' ') %>  1 0 # 3 - Background Intensive Color
color 12 <%= (tint(@base["00"]["rgb"], @ratio).map {|x| '%3s' % x} ).join(' ') %>  0 0 # 3 - Color 0 Intensive (grey)
color 13 <%= (tint(@base["08"]["rgb"], @ratio).map {|x| '%3s' % x} ).join(' ') %>  0 0 # 3 - Color 1 Intensive (light red)
color 14 <%= (tint(@base["0B"]["rgb"], @ratio).map {|x| '%3s' % x} ).join(' ') %>  0 0 # 3 - Color 2 Intensive (light green)
color 15 <%= (tint(@base["0A"]["rgb"], @ratio).map {|x| '%3s' % x} ).join(' ') %>  0 0 # 3 - Color 3 Intensive (light yellow)
color 16 <%= (tint(@base["0D"]["rgb"], @ratio).map {|x| '%3s' % x} ).join(' ') %>  0 0 # 3 - Color 4 Intensive (light blue)
color 17 <%= (tint(@base["0E"]["rgb"], @ratio).map {|x| '%3s' % x} ).join(' ') %>  0 0 # 3 - Color 5 Intensive (light magenta)
color 18 <%= (tint(@base["0C"]["rgb"], @ratio).map {|x| '%3s' % x} ).join(' ') %>  0 0 # 3 - Color 6 Intensive (light cyan)
color 19 <%= (tint(@base["05"]["rgb"], @ratio).map {|x| '%3s' % x} ).join(' ') %>  0 0 # 3 - Color 7 Intensive (white)
